<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabEditarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="top|end"
        android:backgroundTint="@color/purple_500"
        app:srcCompat="@drawable/ic_pencil"
        app:tint="@color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingHorizontal="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="80dp"
            android:orientation="vertical"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:srcCompat="@mipmap/ic_user"
                    />

                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/profileFontTitle"
                    android:text="Título"
                    android:textColor="@color/purple_500" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/background"
                        app:srcCompat="@drawable/ic_dashboard_black_24dp" />

                    <TextView
                        android:textSize="@dimen/profileFontTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Formas de contato"
                        android:gravity="center_vertical"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:textSize="@dimen/profileFont"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Email: "
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/profileEmail"
                        android:textSize="@dimen/profileFont"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Email"
                        android:textColor="@color/purple_500" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:textSize="@dimen/profileFont"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Telefone: "
                        android:textColor="@color/black" />

                    <TextView
                        android:textSize="@dimen/profileFont"
                        android:id="@+id/profilePhone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Telefone"
                        android:textColor="@color/purple_500" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:textSize="@dimen/profileFont"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Whatsapp: "
                        android:textColor="@color/black" />

                    <TextView
                        android:textSize="@dimen/profileFont"
                        android:id="@+id/profileWhatsapp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Whatsapp"
                        android:textColor="@color/purple_500" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:textSize="@dimen/profileFont"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Telegram: "
                        android:textColor="@color/black" />

                    <TextView
                        android:textSize="@dimen/profileFont"
                        android:id="@+id/profileTelegram"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Telegram"
                        android:textColor="@color/purple_500" />
                </LinearLayout>

                <View style="@style/Divider"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:background="#FDFDFD"
                        android:backgroundTint="@color/background"
                        app:srcCompat="@drawable/ic_notifications_black_24dp" />

                    <TextView
                        android:textSize="@dimen/profileFontTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Redes sociais"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <TextView
                        android:textSize="@dimen/profileFont"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Facebook: "
                        android:textColor="@color/black" />

                    <TextView
                        android:textSize="@dimen/profileFont"
                        android:id="@+id/profileFacebook"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Facebook"
                        android:textColor="@color/purple_500" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <TextView
                        android:textSize="@dimen/profileFont"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Twitter: "
                        android:textColor="@color/black" />

                    <TextView
                        android:textSize="@dimen/profileFont"
                        android:id="@+id/profileTwitter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Twitter"
                        android:textColor="@color/purple_500" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <TextView
                        android:textSize="@dimen/profileFont"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Instagram: "
                        android:textColor="@color/black" />
                    <TextView
                        android:textSize="@dimen/profileFont"
                        android:id="@+id/profileInstagram"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Instagram"
                        android:textColor="@color/purple_500" />
                </LinearLayout>

                <View style="@style/Divider"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:background="#FDFDFD"
                        android:backgroundTint="@color/background"
                        app:srcCompat="@mipmap/ic_user" />

                    <TextView
                        android:textSize="@dimen/profileFontTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Informações adicionais"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:textSize="@dimen/profileFont"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Data Nascimento: "
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/profileBirthDate"
                        android:textSize="@dimen/profileFont"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Data Nascimento"
                        android:textColor="@color/purple_500" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>